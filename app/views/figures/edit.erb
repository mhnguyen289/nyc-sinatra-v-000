<h1>Change the attributes for your figure below:</h1>

<h3><%=@figure.name%></h3>


<h3><%=@figure.landmarks.first%></h3>


<form action="/figures/<%= @figure.id%>" method="POST">
  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name">
 
  <br></br>
 
  <%Title.all.uniq.each do |title|%>
  <input  type="checkbox" 
          name="figure[title_ids][]"
          id="title_<%= title.id%>" 
          value="<%= title.id%>"><%=title.name%>
  </input>
  <%end%>

  <br></br>
  
  <label>Create a new Landmark: </label>
  <input type="text" name="figure[landmark][name]" id="new_landmark">
  
  <br></br>
  
  <%Landmark.all.uniq.each do |landmark|%>
   <input 
          type="checkbox" 
          name="figure[landmark_ids][]" 
          id="landmark_<%= landmark.id%>" 
          value="<%= landmark.id%>"
          > <%= landmark.name%>
    </input>
  <%end%>

  <br></br>
  
  <input type="submit" value="Edit Figure">
</form>